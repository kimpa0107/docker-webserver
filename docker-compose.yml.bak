version: "2"
services:
  webserver:
    image: kimpa0107/webserver:1.1
    container_name: webserver
    volumes:
      - ./nginx/conf.d/:/etc/nginx/conf.d
      - ~/projects/:/www/
      - ./php-ini:/usr/local/etc/php/custom.d
    environment:
      PHP_INI_SCAN_DIR: "/usr/local/etc/php/custom.d:/usr/local/etc/php/conf.d"
    ports:
      - "80:80"
